{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "./**/*.ts",
        "./**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}